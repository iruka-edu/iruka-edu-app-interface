    },
    "statistics": [
      {
        "icon": "flame",
        "value": 0,
        "label": "Day streak"
      },
      {
        "icon": "bolt",
        "value": 0,
        "label": "Total XP"
      },
      {
        "icon": "shield",
        "value": "None",
        "label": "Current league"
      },
      {
        "icon": "medal",
        "value": 0,
        "label": "Top 3 finishes"
      }
    ],
    "achievements": [
      {
        "id": "wildfire",
        "name": "Wildfire",
        "progress": {
          "current": 0,
          "total": 3
        },
        "state": "locked"
      }
    ]
  }
}
