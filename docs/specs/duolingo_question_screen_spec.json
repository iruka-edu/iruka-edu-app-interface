  "states": {
    "progress_value": 0.08,
    "hearts_left": 5,
    "check_enabled": false,
    "selected_tokens": [],
    "logic": {
      "token_click": [
        "append_to_answer(token)",
        "update_check_enabled()"
      ],
      "skip_click": [
        "emit('lesson:skip')",
        "go_next_screen()"
      ],
      "check_click": [
        "if correct: show_correct_banner(); enable_continue()",
        "else: decrement_hearts(); shake_wrong_tokens()"
      ]
    }
  },
